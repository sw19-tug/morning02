<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_tags"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/add_tag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Add new tag"
        android:gravity="center"
        android:textSize="15sp"
        android:background="@color/cardview_dark_background"
        android:backgroundTint="#6200EE"
        android:textColor="@color/white"
        android:onClick="click_add_tag"
        />

    <Button
        android:id="@+id/remove_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Remove all selected tags"
        android:onClick="clic"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/select_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Select all tags"
        android:onClick="clic"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/apply_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Apply"
        android:onClick="click_apply"
        android:layout_margin="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/TagsRecyclerId"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
